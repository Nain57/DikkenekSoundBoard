<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sound_item_height"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sound_item_layout_margin"
        android:background="@color/primary_color">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/sound_item_padding"
            android:paddingStart="@dimen/sound_item_padding"
            android:paddingRight="@dimen/sound_item_padding"
            android:paddingEnd="@dimen/sound_item_padding"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sound_item_text_size"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="Va te faire refaire"/>

        <CheckBox
            android:id="@+id/btn_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/sound_item_end_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="?android:attr/starStyle"/>

    </RelativeLayout>

</LinearLayout>